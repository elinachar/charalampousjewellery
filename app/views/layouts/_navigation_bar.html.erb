<div class="container-fluid" id="nav-bar">

  <!-- Top line with main background color. It always stays fixed on top -->
  <div id="top-line">
  </div>

  <!-- Start of first line of navigation bar -->
  <div class="nav-fist-line w-100">
    <!-- Search -->
    <%= button_tag(class: 'nav-search nav-first-line-item color-grey hover-black') do %>
      <i class="material-icons">search</i>
    <% end %>

    <!-- Sign in / Sign out-->
    <div class="nav-sign-in nav-first-line-item">
      <%= link_to(t('navigation_bar.login_sign_up'), root_path, class: "color-grey hover-black") %>
    </div>

    <!-- Favorite -->
    <div class="nav-favorite nav-first-line-item">
      <%= link_to(('<i class="far fa-heart"></i>').html_safe, root_path, class: "color-grey hover-black") %>
    </div>

    <!-- Shopping Bagg -->
    <%= link_to root_path, :action => 'go' do %>
      <div class="nav-shopping-bag nav-first-line-item">
      </div>
    <% end %>

    <!-- Language Swicher -->
    <div class="nav-language-switcher nav-first-line-item">
      <%= render "layouts/switch_language" %>
    </div>

  </div>
  <!-- End of first line of navigation bar -->


  <!-- Start of middle line (logo) of navigation bar -->
  <div class="nav-middle-line text-center">
    <!-- <p class="gold-text">Χαραλάμπους</p> -->
    <%= link_to root_path, :action => 'go' do %>
      <%= image_tag('navbar_logo_capital.png', class: "img-responsive", id: "navbar-logo", alt: "Charalampous - Exclusive Jewellery") %>
    <% end %>
  </div>
  <!-- End of middle line (logo) of navigation bar -->

  <!-- Start of last line of navigation bar -->
  <div class="nav-last-line text-center">
    <ul>
      <li>
        <%= link_to(t('navigation_bar.jewellery'), root_path, class: "color-grey hover-black") %>
        <hr>
        <div class="dropdown row text-left">
          <div class="col-4">
            <p class="dropdown-header"><%= t('navigation_bar.for_woman') %></p>
            <ul>
              <li><%= link_to(t('navigation_bar.rings'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.necklaces'), necklaces_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.earrings'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.bracelets'), root_path, class: "color-grey hover-black") %></li>
            </ul>
          </div>

          <div class="col-4">
            <p class="dropdown-header"><%= t('navigation_bar.for_man') %></p>
            <ul>
              <li><%= link_to(t('navigation_bar.rings'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.bangles'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.necklaces'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.cufflinks'), root_path, class: "color-grey hover-black") %></li>
            </ul>
          </div>

          <div class="col-4">
            <p class="dropdown-header"><%= t('navigation_bar.for_children') %></p>
            <ul>
              <li><%= link_to(t('navigation_bar.rings'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.necklaces'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.earrings'), root_path, class: "color-grey hover-black") %></li>
              <li><%= link_to(t('navigation_bar.kids_bracelets'), root_path, class: "color-grey hover-black") %></li>
            </ul>
          </div>
        </div>
      </li>
      <li><%= link_to(t('navigation_bar.wedding'), root_path, class: "color-grey hover-black") %><hr></li>
      <li><%= link_to(t('navigation_bar.christening'), root_path, class: "color-grey hover-black") %><hr></li>
      <li><%= link_to(t('navigation_bar.watches'), root_path, class: "color-grey hover-black") %><hr></li>
      <li><%= link_to(t('navigation_bar.high_jewellery'), root_path, class: "color-grey hover-black") %><hr></li>
      <li><%= link_to(t('navigation_bar.accessories'), root_path, class: "color-grey hover-black") %><hr></li>
      <li><%= link_to(t('navigation_bar.gifts'), root_path, class: "color-grey hover-black") %><hr></li>
      <li><%= link_to(t('navigation_bar.the_company'), about_path, class: "color-grey hover-black") %><hr></li>
    </ul>

  </div>
  <!-- End of last line of navigation bar -->



</div>
